rules_version = '2';
service cloud.firestore {
  match /databases/{db}/documents {
    match /rtc/{id} {
      // Public read/write access so users can submit and view RTC reports
      allow read, write: if true;
      match /submissions/{subId} {
        // Individual party submissions remain publicly writable
        allow read, write: if true;
      }
    }

    match /statements/{id} {
      // Statements may contain personal information. Allow public read access
      // but restrict writes so only authenticated users can create or modify
      // records.
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Admin-only data
    match /admin/{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
